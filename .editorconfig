root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[{*.java,*.gradle,*.kt,*.kts,*.json}]
charset = utf-8
indent_style = space
indent_size = 2
ij_continuation_indent_size = 2
trim_trailing_whitespace = true

[*.{kt,kts}]
ktlint_code_style = android_studio

[*.xml]
charset = utf-8
indent_style = space
indent_size = 2
ij_continuation_indent_size = 2
trim_trailing_whitespace = true
