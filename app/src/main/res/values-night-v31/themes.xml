<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Theme.App.Starting" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/md_color_surface</item>
    <item name="windowSplashScreenAnimationDuration">200</item>
    <item name="postSplashScreenTheme">@style/Theme.App.NoActionBar</item>
    <item name="android:windowBackground">@color/md_color_surface</item>
    <item name="android:navigationBarColor">@color/md_color_surface</item>
  </style>

  <style name="Theme.App.NoActionBar" parent="Theme.App">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
</resources>