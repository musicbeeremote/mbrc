<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Minimal base theme for Compose app (API 31+) -->
  <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:windowBackground">@color/md_color_surface</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
  </style>

  <!-- Splash screen theme using SplashScreen API -->
  <style name="Theme.App.Starting" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/md_color_surface</item>
    <item name="windowSplashScreenAnimationDuration">200</item>
    <item name="postSplashScreenTheme">@style/Theme.App</item>
  </style>

</resources>
