<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.App.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
    <item name="autoCompleteTextViewStyle">@style/Widget.App.AutoCompleteTextView.SearchView</item>
  </style>

  <style name="Widget.App.AutoCompleteTextView.SearchView" parent="Widget.AppCompat.AutoCompleteTextView">
    <item name="android:textColorHint">?android:attr/textColorSecondaryInverse</item>
    <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
  </style>

  <style name="empty_view_image">
    <item name="android:tint">@color/empty_view_icon_tint</item>
    <item name="android:layout_marginTop">@dimen/empty_view_icon_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/empty_view_icon_margin_bottom</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_width">@dimen/empty_view_icon_size</item>
    <item name="android:layout_height">@dimen/empty_view_icon_size</item>
  </style>

  <style name="WidgetTheme" parent="Theme.Material3.DynamicColors.DayNight">
    <item name="android:colorBackground">@color/widget_background</item>
    <item name="android:textColorPrimary">@color/widget_text_primary</item>
    <item name="android:textColorSecondary">@color/widget_text_secondary</item>
  </style>

</resources>
