<?xml version="1.0" encoding="utf-8"?>
<com.kelsos.mbrc.ui.widgets.MultiSwipeRefreshLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/swipe_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <com.kelsos.mbrc.ui.widgets.EmptyRecyclerView
        android:id="@+id/library_data_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/small_margin"
        android:paddingTop="@dimen/small_margin"
        android:scrollbars="none"
        tools:listitem="@layout/listitem_single"/>

      <com.kelsos.mbrc.ui.widgets.RecyclerViewFastScroller
        android:id="@+id/fastscroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/library_data_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/library_data_list"
        />
    </RelativeLayout>


    <include
      layout="@layout/list_empty_view"
      android:visibility="gone"/>
  </FrameLayout>


</com.kelsos.mbrc.ui.widgets.MultiSwipeRefreshLayout>
