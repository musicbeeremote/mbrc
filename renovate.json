{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": false,
  "prCreation": "approval",
  "packageRules": [
    {
      "groupName": "Kotlin",
      "matchPackageNames": [
        "/^org\\.jetbrains\\.kotlin/"
      ]
    },
    {
      "groupName": "Compose",
      "matchPackageNames": [
        "/^androidx\\.compose/"
      ]
    },
    {
      "groupName": "AndroidX",
      "matchPackageNames": [
        "/^androidx\\./",
        "!/^androidx\\.compose/"
      ]
    }
  ]
}
